@using HeadphonesShop.PresentationWebMVC.Models.DTO
@model InfoHeadphonesDTO

<a>
    @Model.Headphones.Name
</a>

<div class="container">
    <form class="form-group" method="post" asp-controller="Admin" asp-action="AddHeadphones" enctype="multipart/form-data">
        <div class="form-group">
            <label>Name</label>
            <input class="form-control w-25" name="headphonesDTO.Headphones.Name" value="@Model.Headphones.Name" readonly/>
        </div>
        <div class="form-group">
            <label>MinFrequency</label>
            <input class="form-control w-25" type="number" min="0" max="999999" step="1" name="headphonesDTO.Headphones.MinFrequency" value="@Model.Headphones.MinFrequency"/>
        </div>
        <div class="form-group">
            <label>MaxFrequency</label>
            <input class="form-control w-25" type="number" min="0" max="999999" step="1" name="headphonesDTO.Headphones.MaxFrequency" value="@Model.Headphones.MaxFrequency"/>
        </div>
        <div class="form-group">
            <label>Company</label>
            <select class="custom-select w-25" name="headphonesDTO.Headphones.Company.Name">
                @foreach (var i in Model.Companies)
                {
                    if (i.Name == Model.Headphones.Company.Name)
                    {
                        <option selected value="@i.Name">@i.Name</option>
                    }
                    else
                    {
                        <option value="@i.Name">@i.Name</option>
                    }

                }
            </select>
        </div>
        <div class="form-group">
            <label>Design</label>
            <select class="custom-select w-25" name="headphonesDTO.Headphones.Design.Name">
                @foreach (var i in Model.Designs)
                {
                    if (i.Name == Model.Headphones.Design.Name)
                    {
                        <option selected value="@i.Name">@i.Name</option>
                    }
                    else
                    {
                        <option value="@i.Name">@i.Name</option>
                    }
                }
            </select>
        </div>
        <div class="form-group">
            <label>Picture</label>
            <div>
                <img class="figure-img" src="@Model.Headphones.Picture" />
            </div>
            @*<img src="~/images/Sony WF-1000XM4 (черный)/cfd42d366e0004198126f4eba8ee0638.jpeg" />*@
            <input type="file" name="headphonesDTO.File" class="custom-file" />
        </div>


        <input type="submit" value="Add" />
    </form>
</div>