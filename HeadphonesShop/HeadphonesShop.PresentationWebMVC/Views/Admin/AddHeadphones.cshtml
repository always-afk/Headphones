@using HeadphonesShop.PresentationWebMVC.Models.DTO;
@model AddHeadphonesDTO

<div>
    <form method="post" asp-controller="Admin" asp-action="AddHeadphones">
        <label>Name: </label>
        <input name="headphonesDTO.Headphones.Name" />
        <label>Company</label>
        <select>
            @for(var i = 0; i < Model.Companies.Count; i++)
            {
                <option name="headphonesDTO.Companies[@i].Name">@Model.Companies[i].Name</option>
            }
        </select>        
        <input type="submit" value="Add"/>
    </form>
</div>